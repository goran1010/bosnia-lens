# Backend example environment file
# Copy to `.env` and replace placeholder values with real secrets before running

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bosnia-lens
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/test_bosnia-lens

# Token / JWT secrets
ACCESS_TOKEN_SECRET=your-access-token-secret
REFRESH_TOKEN_SECRET=your-refresh-token-secret

# Email Service Configuration (Resend)
RESEND_API_KEY=your-resend-api-key

# Application Configuration
URL=http://127.0.0.1:5173
PORT=3000

# OAuth / external client credentials (if used)
CLIENT_ID=your-client-id
CLIENT_SECRET=your-client-secret
