generator client {
  provider = "prisma-client-js"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime

  @@map("sessions")
}

model User {
  id               String  @id @default(uuid())
  username         String  @unique
  email            String  @unique
  isEmailConfirmed Boolean @default(false)
  password         String
  isAdmin          Boolean @default(false)

  @@map("users")
}

enum postOperator {
  BH_POSTA
  POSTE_SRP
  HP_MOSTAR
}

model PostalCode {
  id   String        @id @default(uuid())
  code Int           @unique
  city String
  post postOperator?

  @@map("postal_codes")
}
