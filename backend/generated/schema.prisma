generator client {
  provider = "prisma-client-js"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String  @id @default(uuid())
  username         String  @unique
  email            String  @unique
  isEmailConfirmed Boolean @default(false)
  password         String

  @@map("users")
}

model PostalCode {
  id   String  @id @default(uuid())
  code Int     @unique
  city String
  post String?

  @@map("postal_codes")
}
